<h2>Available drones</h2>

{{#each drones}}
<div>
    <ul>
        <li>Name: {{name}}</li>
        <li>Propellers: {{propellers}}</li>
        <li>Max Speed: {{maxSpeed}}</li>
    </ul>

    <button>
        <a href="/drones/{{id}}/edit">Edit This Drone</a>
    </button>

    <form action="/drones/{{id}}/delete" method="POST">
        <button type="submit">Delete this Drone!</button>
    </form>
</div>   
{{/each}}

<a href="/drones/create">Create a new Drone!</a>

<hr>

